{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Graph Schema",
  "description": "Validated schema for knowledge graph with nodes, edges, and evidence",
  "type": "object",
  "required": ["nodes", "edges"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "type", "sourceId"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["term", "concept", "structure", "process", "substance", "person", "text", "event", "location", "artifact"]
          },
          "sourceId": {
            "type": "string",
            "pattern": "^\\d{3}$"
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "relation", "evidence"],
        "properties": {
          "from": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "to": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "relation": {
            "type": "string",
            "minLength": 1
          },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["content", "citation"],
              "properties": {
                "content": {
                  "type": "string",
                  "minLength": 10
                },
                "citation": {
                  "type": "string",
                  "pattern": "^\\d{3}-\\d{4}-\\d{3}$"
                },
                "videoId": {
                  "type": "string",
                  "pattern": "^\\d{4}$"
                },
                "timestamp": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  }
}
