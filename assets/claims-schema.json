{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claims Schema",
  "description": "Validated schema for extracted domain assertions with citations",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["claim", "citation", "videoId"],
    "properties": {
      "claim": {
        "type": "string",
        "minLength": 10
      },
      "citation": {
        "type": "string",
        "pattern": "^\\d{3}-\\d{4}-\\d{3}$",
        "description": "Format: SOURCE_ID-ITEM_ID-CLAIM_ID (e.g., 003-0004-015)"
      },
      "videoId": {
        "type": "string",
        "pattern": "^\\d{4}$",
        "description": "Zero-padded video number (e.g., 0004)"
      },
      "timestamp": {
        "type": "number",
        "minimum": 0
      },
      "speaker": {
        "type": "string",
        "pattern": "^[A-Z]$"
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    }
  }
}
