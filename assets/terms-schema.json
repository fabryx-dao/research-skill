{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Terms Schema",
  "description": "Validated schema for term definitions (wiki-style)",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["termId", "term", "definition", "citations"],
    "properties": {
      "termId": {
        "type": "string",
        "pattern": "^\\d{3}$",
        "description": "Zero-padded term number (e.g., 001, 042)"
      },
      "term": {
        "type": "string",
        "minLength": 1
      },
      "category": {
        "type": "string",
        "enum": ["concept", "structure", "process", "substance", "person", "text", "event", "location", "phenomenon", "evidence", "artifact"]
      },
      "summary": {
        "type": "string",
        "minLength": 10
      },
      "definition": {
        "type": "string",
        "minLength": 50
      },
      "citations": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "pattern": "^\\d{3}-\\d{4}-\\d{3}$"
        }
      },
      "sourceId": {
        "type": "string",
        "pattern": "^\\d{3}$"
      },
      "source": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
