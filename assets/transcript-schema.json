{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Video Transcript Schema",
  "description": "Validated schema for video transcripts with speaker diarization",
  "type": "object",
  "required": ["success", "videoId", "transcript"],
  "properties": {
    "success": {
      "type": "boolean",
      "const": true
    },
    "videoId": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "method": {
      "type": "string",
      "enum": ["assemblyai", "assemblyai-speaker-diarization", "youtube-auto", "summarize"]
    },
    "duration": {
      "type": "number",
      "minimum": 0
    },
    "speakers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["speaker", "label"],
        "properties": {
          "speaker": {
            "type": "string",
            "pattern": "^[A-Z]$"
          },
          "label": {
            "type": "string"
          }
        }
      }
    },
    "transcript": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1
          },
          "speaker": {
            "type": "string",
            "pattern": "^[A-Z]$"
          },
          "start": {
            "type": "number",
            "minimum": 0
          },
          "end": {
            "type": "number",
            "minimum": 0
          }
        }
      }
    }
  }
}
